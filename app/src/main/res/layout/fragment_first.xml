<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edt_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:hint="@string/input_data_from_fragment"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:id="@+id/lineat_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_data">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/flaot_to_activity_Fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_activity"
            android:layout_marginEnd="30dp"
            android:textAllCaps="false"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/flaot_to_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_fragment"
            android:textAllCaps="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>